<body>
    {{#products}} 
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product Record</h4>
            <img src="../Images/{{productName}}.jpg" alt="{{productName}}">
            <p class="card-text">Product name: {{productName}}</p>
            <p class="card-text">Product type: {{productType}}</p>
            <p class="card-text">Price per pack: {{pricePerPack}}</p>
            <p class="card-text">Pack size: {{packSize}}</p>
            <p class="card-text">Price per kg: {{pricePerKg}}</p>
            <p class="card-text">Product description: {{productDescription}}</p>
            <p class="card-text">Holding Value: {{holdingValue}}</p>
            <p class="card-text">Amount in Stock: {{amountInStock}}</p>
        </div>
    </div>
    {{/products}} 
</body>
